mixin menu()
  nav.menu()
    .menu__container
      span.menu__logo
        a.menu__link(href='/')
          img.menu__logo-img(src=require('images/logo.png'), title='Injective Procotol', alt='Injective Procotol')
      .menu__right
        ul.menu__ul
          li.menu__item
            a.menu__link.scrollto(href='#exchange') Exchange
          li.menu__item
            a.menu__link(href='#whitepaper') White Paper
          li.menu__item
            a.menu__link.highlighted.scrollto(href='#contactus') Contact us
